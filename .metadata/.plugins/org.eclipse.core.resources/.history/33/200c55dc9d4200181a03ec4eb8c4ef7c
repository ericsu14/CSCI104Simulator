/** The main class that initializes and connects all of the UI components */

package view;

import javafx.application.Application;
import javafx.stage.Stage;

public class Launcher extends Application
{
	/* Title of the game */
	public static final String mGameTitle = "CSCI 104 Simulator";
	/* Stage object */
	public Stage mStage;
	/* Main menu */
	public MainMenu mMainMenu;
	
	/** The main menu scene object */
	
	@Override
	public void start(Stage primaryStage) throws Exception 
	{
		initializeScenes();
		mStage = primaryStage;
		primaryStage.setTitle(mGameTitle);
		// TODO: Hook the stage onto the primary stage
		primaryStage.setScene(mMainMenu.getScene());
		primaryStage.show();
	}
	
	public void main (String [] args)
	{
		launch(args);
	}
	
	/** Initializes the scenes for this game */
	public void initializeScenes()
	{
		mMainMenu = new MainMenu();
	}
	
	/** Switches the current scene to the main menu */

}
